<%for(var i=0;i < posts.length;i++){%>
    <div class="col-sm-15" style="width: 100%;" >
        <div class="card overflow-scroll card " style="margin: 2%;" >
          <div class="card-body ">
            <h4 class="card-title"><%=posts[i].title%></h4>
            <h6 class="card-title"><%=posts[i].name%></h6>
            <a href="/update_post?_id=<%= posts[i]._id %>" class="btn btn-primary border-shadow update button">Edit</a>
            <a href="/users/delete/<%= posts[i]._id %>" class="btn btn-primary border-shadow delete button">Delete</a>
            <a href="/see_post?_id=<%= posts[i]._id %>" class="btn btn-primary border-shadow delete button">Read</a>
          </div>
        </div>
    </div>    
<%}%>