<!--Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter border-shadow">
                <a href="/users/dashboard"><i class="fas fa-angle-double-left"></i>All Posts</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark"> Edit Post</h2>
            <span class="text-dark"> Use the below form to edit your post</span>
        </div>
        <%-include('partials/messages')%> 
        <!--form handling-->
        <form action="/users/update/<%= post._id %>" method="POST" id="update_post">
            <div class="new_user">    
            <div class="form-group">
                  <label for="title">Title</label>
                  <input type="text" name="title" value="<%= post.title %>" class="form-control" id="exampleFormControlInput1" placeholder="Add Title" required>
                </div>
                <div class="form-group">
                  <label for="content">Content</label>
                  <textarea type="text" name="content" value="<%= post.content %>" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Add Content" required></textarea>
                </div>
              </form>
              <div class="form-group">
                  <button type="submit" class="btn text-light update"  style="background-color: peru;">Update Post</button>
              </div>
            </div>
        </form>
        <!--form handling-->
    </div>
</main>
<!--Main Site-->